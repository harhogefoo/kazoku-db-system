
<div id="mailing_lists">
  <div class="mailing_list">
    <h5>メール配信終了リスト</h5>
    <%= link_to '配信予定リストに戻る', admin_news_letter_index_path %>

    <h6>月１メール配信リスト</h6>
    <% if @monthly_news_letter %>
        <table>
          <thead>
          <tr>
            <th>タイトル</th>
            <th>配信日</th>
            <th colspan="2">アクション</th>
          </tr>
          </thead>
          <tbody>
          <% @monthly_news_letter.each do |news| %>
              <tr>
                <td><%= news.subject %></td>
                <td><%= news.distribution.strftime('%m月%d日') %></td>
                <td><%= link_to '詳細', admin_news_letter_path(news) %></td>
                <td><%= link_to '編集', edit_admin_news_letter_path(news) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <p class="text-center">現在表示できるメールはありません。</p>
    <% end %>
  </div>

  <div class="mailing_list">
    <h6>家庭向けメール配信リスト</h6>

    <% if @news_letter %>
        <table>
          <thead>
          <tr>
            <th>タイトル</th>
            <th>配信日</th>
            <th colspan="2">アクション</th>
          </tr>
          </thead>
          <tbody>
          <% @news_letter.each do |news| %>
              <tr>
                <td><%= news.subject %></td>
                <td><%= news.distribution.strftime('%m月%d日') %></td>
                <td><%= link_to '詳細', admin_news_letter_path(news) %></td>
                <td><%= link_to '編集', edit_admin_news_letter_path(news) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <p class="text-center">現在表示できるメールはありません。</p>
    <% end %>
  </div>

</div>
