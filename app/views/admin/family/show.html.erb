<table>
  <thead>
  <tr>
    <th>名前</th>
    <th>住所</th>
    <th>働き方</th>
    <th>子供の数</th>
    <th>男性OK</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>
      <%= @family.name %>
    </td>
    <td>
      <%= @family.location.address %>
    </td>
    <td>
      <% if @family.profile_family.job_style == Settings.job_style.both %>
          <%= Settings.job_style.str.both %>
      <% elsif @family.profile_family.job_style == Settings.job_style.homemaker %>
          <%= Settings.job_style.str.homemaker %>
      <% end %>
    </td>
    <td>
      <%= @family.profile_family.number_of_children %>
    </td>
    <td>
      <% if @family.profile_family.is_male_ok == Settings.is_male.ok %>
          <%= 'OK' %>
      <% elsif @family.profile_family.is_male_ok == Settings.is_male.ng %>
          <%= 'NG' %>
      <% end %>
    </td>
  </tr>
  </tbody>
</table>
